${c0}    /  ______|    ${info2}
${c0}    | |______     ${info3}
${c0}    \\______  \\    ${info4}
${c0}     ______| |    ${info5}
${c0}  | |________/    ${info6}
${c0}  |____________   ${info7}${S_R}"
} 

function logo_suse() {
local c0="${S_R}${C_BG}"

echo -e "${c0}      _______      ${info1}
${c0}  -___|   __ \\     ${info2}
${c0}         / ${c1}.${c0}\\ \\    ${info3}
${c0}         \\__/ ${c0}|    ${info4}
${c0}       _______|    ${info5}
${c0}       \\_______    ${info6}
${c0}  --__________/    ${info7}${S_R}"
} 


function logo_void() {
local c0="${S_R}${C_BG}"
local c1="${S_R}${C_G}"

echo -e "${c0}      _______       ${info1}
${c1}      ${c0}\_____ \`-     ${info2}
${c1}   /\   ${c0}___ \`- \    ${info3}
${c1}  | |  ${c0}/   \  | |   ${info4}
${c1}  | |  ${c0}\___/  | |   ${info5}
${c1}   \ \`-_____  ${c0}\/    ${info6}
${c1}    \`-______\       ${info7}${S_R}"
} 


function logo_linuxlite() {
local c0="${S_R}${C_Y}"
local c1="${S_R}${C_W}"

echo -e "${c0}     /\\        ${info1}
${c0}    /  \\       ${info2}
${c0}   / ${c1}/ ${c0}/       ${info3}
${c0}  > ${c1}/ ${c0}/        ${info4}
${c0}  \\ ${c1}\\ ${c0}\\        ${info5}
${c0}   \\_${c1}\\\\${c0}_\\       ${info6}
${c1}      \\        ${info7}${S_R}"
} 



# INFO MESSAGES
info1="${S_R}${S_B}Hostname${S_R}:  $(hostname)"
info2="${S_R}${S_B}OS${S_R}:        $(cat /etc/*release | grep PRETTY_NAME | cut -f2 -d\") $(uname -m)"
info3="${S_R}${S_B}Kernel${S_R}:    $(uname -r) -- $(uname -v)"
info4="${S_R}${S_B}CPU${S_R}:      $(cat /proc/cpuinfo | grep "^model name" | cut -f2 -d: | head -1)"
info5="${S_R}${S_B}Memory${S_R}:    $(free -h | grep "^Mem:" | awk 'BEGIN { OFS=" / " }{ print $3, $2 }')"
info6="${S_R}${S_B}Local IP${S_R}:  $(ip -c=never route get 8.8.8.8 | head -1 | awk 'BEGIN { OFS=" (" }{print $3, $5}'))"
info7="${S_R}${S_B}Uptime${S_R}:    $(uptime -p | sed 's/up //')"


# CREATE ISSUE
issue="$(clear)${S_B}${C_N}\l${S_R}\n"

# ADD DISTRO LOG
distro="linux"
for d in $(declare -F | sed '/logo_/ s/^.*_//'); do
	if cat /etc/*release | grep -i "$d" &>/dev/null; then
		distro="$d"
		break
	fi
done

issue="${issue}$(logo_$distro)"

# DISPLAY SYSTEM USERS
issue="${issue}\n\n${S_B} Users${S_R}: "
for u in $(awk -F: '$3 >= 1000 && $1 != "nobody" {print $1}' /etc/passwd | tac); do 
	# Red if lock user:
	[ "$(passwd -S $u 2>/dev/null | cut -f2 -d" ")" = "L" ] && issue="${issue}${C_LR}"
	# Add * to sudo users:
	grep -Po '^sudo.+:\K.*$' /etc/group | grep -w "$u" &>/dev/null && u="${u}*"
	
	issue="${issue}$u${S_R}  " 
done
issue="${issue}\n"

echo -e "$issue"

