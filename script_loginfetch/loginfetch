}

function logo_gentoo() {
local c0="${S_R}${C_BM}"
local c1="${S_R}${C_M}"

echo -e "${c0}     .-----.      ${info1}
${c0}   .\`    _  \`.    ${info2}
${c0}   \`.   (${c1}_)   ${c0}\`.  ${info3}
${c0}     \`${c1}.        /  ${info4}
${c1}    .\`       .\`   ${info5}
${c1}   /       .\`     ${info6}
${c1}   \____.-\`       ${info7}
${S_R}"
}

function logo_linux() {
local c0="${S_R}${C_W}"
local c1="${S_R}${C_Y}"

echo -e "${c0}      ___       ${info1}
${c0}     (${c1}.. ${c0}\      ${info2}
${c0}     (${c2}<> ${c0}|      ${info3}
${c0}    /${c1}/  \\ ${c0}\\     ${info4}
${c0}   ( ${c1}|  | ${c0}/|    ${info5}
${c2}  _${c0}/\\ ${c1}__)${c0}/${c2}_${c0})    ${info6}
${c2}  \/${c0}-____${c2}\/     ${info7}${S_R}"
} 

function logo_manjaro() {
local c0="${S_R}${C_G}"

echo -e "${c0}  ||||||||| ||||    ${info1}
${c0}  ||||||||| ||||    ${info2}
${c0}  ||||      ||||    ${info3}
${c0}  |||| |||| ||||    ${info4}
${c0}  |||| |||| ||||    ${info5}
${c0}  |||| |||| ||||    ${info6}
${c0}  |||| |||| ||||    ${info7}${S_R}"
} 


function logo_nixos() {
local c0="${S_R}${C_B}"
local c1="${S_R}${C_BB}"

echo -e "${c0}    \\\\\\   ${c1}\\\\\\ //      ${info1}
${c0}   ==\\\\\\___${c1}\\\\\\/ ${c0}//    ${info2}
${c1}     //    \\\\\\$(echo -e "${c0}")//     ${info3}
${c1}  ==//      ${c0}//==    ${info4}
${c1}   //${c0}\\\\\\$(echo -e "${c1}")____${c0}//       ${info5}
${c1}  // ${c0}/\\\\\\   ${c1}\\\\\\==     ${info6}
${c0}    // \\\\\\   ${c1}\\\\\\      ${info7}${S_R}"
} 


function logo_openbsd() {
local c0="${S_R}${C_Y}"
local c1="${S_R}${C_BY}"

echo -e "${c0}       _____      ${info1}
${c0}     \-     -/    ${info2}
${c0}  \_/         \   ${info3}
${c0}  |        ${c1}O O ${c0}|  ${info4}
${c0}  |_  ${c2}<   ${c0})  ${c2}3 ${c0})  ${info5}
${c0}  / \         /   ${info6}
${c0}     /-_____-\    ${info7}${S_R}"
} 


function logo_raspbian() {
local c0="${S_R}${C_BG}"
local c1="${S_R}${C_BR}"

echo -e "${c0}    __  __      ${info1}
${c0}   (_\\)(/_)     ${info2}
${c1}   (_(__)_)     ${info3}
${c1}  (_(_)(_)_)    ${info4}
${c1}   (_(__)_)     ${info5}
${c1}     (__)       ${info6}
${c1}                ${info7}${S_R}"
} 


function logo_antergos() {
local c0="${S_R}${C_B}"
local c1="${S_R}${C_W}"

echo -e "${c0}       .\`\`\`.        ${info1}
${c0}      /     \\       ${info2}
${c0}     /  ${c1}.\`   ${c0}\\      ${info3}
${c0}    / ${c1}.\` .\` . ${c0}\\     ${info4}
${c0}   / ${c1}\` .\`.\` .\` ${c0}\\    ${info5}
${c0}  |    ${c1}\`.\`  \`   ${c0}|   ${info6}
${c0}   \\___________/    ${info7}${S_R}"
} 


function logo_ubuntu() {
local c0="${S_R}${C_W}"
local c1="${S_R}${C_R}"

echo -e "${c1}           _     ${info1}
${c0}       ---${c1}(_)    ${info2}
${c1}   _${c0}/  ---  \\    ${info3}
${c1}  (_)${c0} |   |      ${info4}
${c0}    \\  --- ${c1}_${c0}/    ${info5}
${c0}       ---${c1}(_)    ${info6}
${c0}                 ${info7}${S_R}"
} 


function logo_centos() {
local c0="${S_R}${C_G}"
local c1="${S_R}${C_Y}"
local c2="${S_R}${C_M}"
local c3="${S_R}${C_B}"

echo -e "${c0}   ____${c1}^${c2}____      ${info1}
${c0}   |\\  ${c1}|${c2}  /|      ${info2}
${c0}   | \\ ${c1}|${c2} / |      ${info3}
${c2}  <---- ${c3}---->     ${info4}
${c3}   | / ${c0}|${c1} \\ |      ${info5}
${c3}   |/__${c0}|${c1}__\\|      ${info6}
${c0}       v          ${info7}${S_R}"
} 


function logo_elementary() {
local c0="${S_R}${C_BB}"
local c1="${S_R}${C_B}"

echo -e "${c1}    _______      ${info1}
${c1}   /  ${c0}___  ${c1}\\     ${info2}
${c1}  /  ${c0}|  /  /${c1}\\    ${info3}
${c1}  |${c0}__\\ /  /${c1} |    ${info4}
${c1}  \\   ${c0}/__/${c1}  /    ${info5}
${c1}   \\_______/     ${info6}
${c1}                 ${info7}${S_R}"
} 

