${c0}   ==\___${c1}\/ ${c0}//     ${info2}
${c1}     //    \\${c0}//     ${info3}
${c1}  ==//      ${c0}//==   ${info4}
${c1}   //${c0}\\${c1}____${c0}//       ${info5}
${c1}  // ${c0}/\   ${c1}\==      ${info6}
${c0}    // \   ${c1}\       ${info7}${S_R}"
} 


