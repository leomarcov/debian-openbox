${c0}  |        ${c1}O O ${c0}|   ${info4}
${c0}  |_  ${c2}<   ${c0})  ${c2}3 ${c0})   ${info5}
${c0}  / \         /    ${info6}
${c0}     /-_____-\     ${info7}${S_R}"
} 


