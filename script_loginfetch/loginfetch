#!/bin/bash
#===================================================================================
# NEOFETCH TTY LOGIN THEME
# FILE: loginfetch.sh
#
# DESCRIPTION: Generate a /etc/issue file based on distro fetch info
#
# AUTHOR: Leonardo Marco
# VERSION: 1.0
# CREATED: 2020.05.06
#
# ASCII LOGOS COPIED FROM UFETCH PROYECT (Copyright 2018, 2019 Joe Schillinger <me@schil.li>)
#===================================================================================

#### COLORS DEFINITION
S_R="\e[0m"            	# Reset all attributes
S_B="\e[1m"             # Style BOLD
S_D="\e[2m"             # Style DIM
S_U="\e[4m"            	# Style UNDERLINE
S_I="\e[7m"             # Style INVERTED
S_DL="\e[K"             # Style DELETE TO END OF LINE
C_D="\e[39m"            # Color DEFAULT
C_R="\e[31m"            # Color RED
C_BR="\e[1m\e[31m"      # Color BOLD RED
C_LR="\e[91m"           # Color LIGHT RED
C_G="\e[32m"            # Color GREEN
C_BG="\e[1m\e[32m"      # Color BOLD GREEN
C_LG="\e[92m"           # Color LIGHT GREEN
C_Y="\e[33m"            # Color YELLOW
C_BY="\e[1m\e[33m"      # Color BOLD YELLOW
C_LY="\e[93m"           # Color LIGHT YELLOW
C_B="\e[34m"            # Color BLUE
C_BB="\e[1m\e[34m"      # Color BOLD BLUE
C_LB="\e[94m"           # Color LIGHT BLUE
C_M="\e[35m"            # Color MAGENTA
C_BM="\e[1m\e[35m"      # Color BOLD MAGENTA
C_LM="\e[95m"           # Color LIGHT MAGENTA
C_C="\e[36m"            # Color CYAN
C_BC="\e[1m\e[36m"      # Color BOLD CYAN
C_LC="\e[96m"           # Color LIGHT CYAN
C_N="\e[90m"            # Color GREY
C_LN="\e[37m"           # Color LIGHT GREY



#### DISTRO LOGOS FUNCTIONS

function logo_debian() {
local c0="${S_R}${C_BR}"
local c1="${S_R}${C_R}"

echo -e "${c0}     _____      ${info1}
${c0}    /  __ \\     ${info2}
${c0}   |  /    |    ${info3}
${c0}   |  ${c1}\\___-     ${info4}
${c1}   -_           ${info5}
${c1}     --_        ${info6}
${c0}                ${info7}${S_R}"
}


function logo_alphine() {
local c0="${S_R}${C_B}"
local c1="${S_R}${C_W}"

echo -e "${c0}     /\ /\         ${info1}
${c0}    /${c1}/ ${c0}\  \        ${info2}
${c0}   /${c1}/   ${c0}\  \       ${info3}
${c0}  /${c1}//    ${c0}\  \      ${info4}
${c0}  ${c1}//      ${c0}\  \     ${info5}
${c0}           \  \    ${info6}
${c0}            \      ${info7}${S_R}"
}


function logo_arch() {
local c0="${S_R}${C_BB}"
local c1="${S_R}${C_B}"

echo -e "${c0}        /\         ${info1}
${c0}       /^^\        ${info2}
${c0}      /\   \       ${info3}
${c0}     /  ${c1}__  \      ${info4}
${c1}    /  (  )  \     ${info5}
${c1}   / __|  |__\\\\\\    ${info6}
${c1}  ///        \\\\\\\\\   ${info7}
${S_R}"
}


function logo_crux() {
local c0="${S_R}${C_W}"
local c1="${S_R}${C_Y}"

echo -e "${c0}      ___     ${info1}
${c0}     (${c1}.Â· ${c0}|    ${info2}
${c0}     (${c2}<> ${c0}|    ${info3}
${c0}    / ${c1}__  ${c0}\\   ${info4}
${c0}   ( ${c1}/  \\ ${c0}/|  ${info5}
${c2}  _${c0}/\\ ${c1}__)${c0}/${c2}_${c0})  ${info6}
${c2}  \/${c0}-____${c2}\/   ${info7}${S_R}"
}


