#!/bin/bash

options=" â»\tPower off
 ğŸ—˜\tReboot
 â¸\tSuspend
 â¾\tHibernate
 ğŸ—™\tLogout
 ğŸ— \tLock session"

if [ $# -eq 0 ]; then
    echo -e "$options"

elif [ "$1" = "show" ]; then
    rofi -theme openbox-menu -show Action -modi "Action:$(readlink -f "$0")"

else
    case "$@" in
    *"Logout")
        openbox --exit
        ;;
    *"Lock session")
        x-locker
        ;;
    *"Power off")
        systemctl poweroff
        ;;
    *"Reboot")
        systemctl reboot
        ;;
    *"Suspend")
        systemctl suspend
        ;;
    *"Hibernate")
        systemctl hibernate
        ;;
    esac
fi
