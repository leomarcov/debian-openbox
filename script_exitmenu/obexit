#!/bin/bash

options=" â»  Power off
 ğŸ—˜  Reboot
 â¸ Suspend
 â¾  Hibernate
 ğŸ—™ Logout
 ğŸ—   Lock session"

if [ $# -eq 0 ]; then
    echo "$options"

elif [ "$1" = "show" ]; then
    rofi -theme openbox-menu -show Action -modi "Action:$(readlink -f "$0")"

else
    case "$@" in
    "Logout")
        openbox --exit
        ;;
    "Lock session")
        physlock
        ;;
    "Power off")
        systemctl poweroff
        ;;
    "Reboot")
        systemctl reboot
        ;;
    "Suspend")
        systemctl suspend
        ;;
    "Hibernate")
        systemctl hibernate
        ;;
    esac
fi
